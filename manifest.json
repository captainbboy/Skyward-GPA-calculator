        "tabs",
	    "storage"
    ],
	"icons": {                   
		"16": "icon16.png",
		"38": "icon38.png",
		"48": "icon48.png",
		"128": "icon128.png"  
	},    
	"browser_action": {
        "default_title": "Reee",
        "default_popup": "popup.html",
		"default_icon": {                   
			"16": "icon16.png",
			"38": "icon38.png",
			"48": "icon48.png",
			"128": "icon128.png"  
		}
	},
    "web_accessible_resources": [
        "css/variables.css",
        "css/qsfmain001.css",
        "css/sfhome001.css",
