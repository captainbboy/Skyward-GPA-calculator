{
    "name": "Skyward GPA Calculator - And More",
    "description": "This is an extension which injects various scripts into Skyward, to calculate GPA and perform other tasks, such as disabling the idle logout prompt.",
    "version": "0.1",
    "permissions": [
        "http://*/scripts/wsisa.dll/WService=wsEAplus/*",
		"https://*/scripts/wsisa.dll/WService=wsEAplus/*",
        "tabs",
	"storage"
    ],
	"icons": {                   
		"16": "icon16.png",
		"38": "icon38.png",
		"48": "icon48.png",
		"128": "icon128.png"  
	},    
	"browser_action": {
		"default_icon": {                   
			"16": "icon16.png",
			"38": "icon38.png",
			"48": "icon48.png",
			"128": "icon128.png"  
		}
	},
    "content_scripts": [
        {
        "matches": [
            "http://*/scripts/wsisa.dll/WService=wsEAplus/*",
			"https://*/scripts/wsisa.dll/WService=wsEAplus/*"
        ],
        "js": ["inject.js"],
        "run_at": "document_end"
        }
    ],
	"browser_action": {
        "default_title": "Reee",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
